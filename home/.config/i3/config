# There's a bug in i3 https://faq.i3wm.org/question/3473/how-to-disable-urgent-hints-on-startup/index.html
# which causes an 'urgent' indicator on the workspace when these apps are launched
# that's very annoying and there's no way to turn it off, but apparently using 'for_window' instead of 'assign'
# prevents this from happening.  That's why for_window is used for those apps that we load on startup
# UPDATE: that workaround doesn't work, it still signals the worksapces with the urgent color.
for_window [class="Firefox"] move to workspace $ws1
for_window [class="Google-chrome"] move to workspace $ws10
for_window [class="Vmware"] move to workspace $ws5
for_window [class="Skype"] move to workspace $ws8

# assign doesn't work for spotify due to a bug
# https://community.spotify.com/t5/Desktop-Linux/WM-CLASS-window-property-on-Linux/td-p/1247042
# so use a workaround
#assign [class="Spotify"] workspace $ws7
for_window [class="Spotify"] move to workspace $ws7

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id "pamixer -i 5; notify-send --expire-time=250 '  Raise Volume ['$(pamixer --get-volume)'%]'"
bindsym XF86AudioLowerVolume    exec --no-startup-id "pamixer -d 5; notify-send --expire-time=250 '  Lower Volume ['$(pamixer --get-volume)'%]'"
bindsym XF86AudioMute       exec --no-startup-id "pamixer -t; notify-send --expire-time=250 ' /  Toggle'"

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10  -time 500 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 -time 500 # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# XPS 13 function key F8 (without `Fn` this sends Super_L+p according to xmodmap)
bindsym mod4+p  exec $HOME/.config/i3/cycle-monitors.sh

# lock screen control
bindsym $mod+control+l    exec --no-startup-id $HOME/.config/i3/transfer-sleep-lock-i3lock.sh

# Autostart commands

# On XPS systems with 4K displays need to scale up the DPI
exec --no-startup-id xrandr --dpi 192

# Experimental: automatically run my displays config script
exec_always --no-startup-id $HOME/.config/i3/configure-monitors.sh

# Run compton compositor to enable fancy transparency trickery
exec --no-startup-id compton -b

# Launch polybar instead of using the i3 bar
exec_always --no-startup-id $HOME/.config/polybar/run-polybar.sh

# nm-applet at startup for configuring wifi connections
exec --no-startup-id nm-applet &

# bluetooth config
exec --no-startup-id blueman-applet &

# adjust color temperature for better eye comfort
exec --no-startup-id redshift-gtk &

# Configure the X screensaver API to dim the screen after 10 minutes, and to lock the screen 30 seconds after that
exec --no-startup-id xset s 600 30 &

# Invoke i3lock to lock the session when the screen saver setting above locks it, and also if the system suspends
exec --no-startup-id xss-lock --transfer-sleep-lock --notifier $HOME/.config/i3/dim-screen.sh -- $HOME/.config/i3/transfer-sleep-lock-i3lock.sh &

# Always run dunst to handle notifications
exec_always --no-startup-id "killall -q dunst; dunst &"

# Set a wallpaper
exec_always --no-startup-id feh --bg-max --randomize $HOME/.wallpaper/*.jpg

# Copied from the manjaro i3 config
# something to do with handling screen changes
exec_always --no-startup-id "pgrep --exact xev || xev -root -event randr | grep --line-buffered ScreenChangeNotify | while read change; do pkill -RTMIN+4 i3blocks; done"

# always start firefox
exec firefox
exec google-chrome-stable
exec skype
exec spotify-hidpi

# execute a terminal running tmux in workspace two
exec --no-startup-id i3-msg 'workspace $ws2; exec $TERMINAL --command tmux new-session -A -s loginshell'


